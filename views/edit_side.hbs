<div class="container">
  <form method="POST" action="/admin/{{userid}}/sidemenu/{{action_type}}">
  <div class="row">
      <div class="col-25">
        <label for="dropdown"><B>Мова</B></label>
      </div>
      <div class="col-75">
        <select id="dropdown" name="lang">
          <option value="ua">Українська</option>
          <option value="en">English</option>
        </select>
      </div>
    <div class="row">
      <div class="col-25">
        <label for="login"><B>Заголовок</B></label>
      </div>
      <div class="col-75">
        <input type="text" id="fname" name="title" placeholder="Заголовок" value="{{title}}" required>
      </div>
    </div>
    
    <div id="helper">
      <h4 style="color: white; margin: 0;">Контент</h4>
      {{#if content_title}}
      <p>Поточний контент - {{content_title}}</p>
      {{/if}}
      {{#ContentList content_page_list}}
      {{/ContentList}} 
    </div> 
    <button id="save">Зберегти</button>
  </form>
  <form method="POST" action="/admin/{{userid}}/sidemenu/delete/{{id}}">
    <button id="delete" style="visibility:{{parameter}}" type="submit">Видалити</button>
  </form>
</div>
