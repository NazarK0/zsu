    <div class="container">
        <form id="send-files_form" class="file-form send-files_form" action="/admin/{{userid}}/send-page-files"
          method="post" enctype="multipart/form-data">
          <p style="color: white;">Завантажити файли на сторінку</p>
          <input style="color: white;" type="file" id="page_files" name="page_files" multiple>
          <input name="folder_path" value="{{folder_path}}" type="hidden">
          <input name="folder_name" value="{{folder_name}}" type="hidden">
          <button id="ok_button" type="submit">Зберегти</button>
        </form>  
        {{#ifCond files.length '>' 0}}
          <h3>Поточні значення:</h3>
          <table class="table-fill">
            <thead>
              <tr>
                <th class="text-left">Файли</th>
                <th class="text-left">Дії</th>
              </tr>
            </thead>
            <tbody class="table-hover">
              {{#each files}} 
                <tr>
                  <td class="text-left"><p height="40px">{{this}}</p></td>
                  <td>
                    <form method="POST" action="/admin/{{../userid}}/delete/file/{{this}}">
                      <input name="folder_path" value="{{../folder_path}}" type="hidden">
                      <input name="folder_name" value="{{../folder_name}}" type="hidden">
                      <button id="delete"><i class="fas fa-trash-alt"></i>Видалити</button>
                    </form>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
          <form id="add-files_form" class="file-form add-files_form"
          action="/admin/{{userid}}/add-files" method="post" enctype="multipart/form-data">
            <p style="color: white;">Додати</p>
            <input style="color: white;" type="file" id="add_files" name="page_files" multiple>
            <input name="folder_path" value="{{folder_path}}" type="hidden">
            <input name="folder_name" value="{{folder_name}}" type="hidden">
            <button id="ok_button" type="submit">Зберегти</button>
          </form>
        {{/ifCond}}
         <form id="redirect-image_form" action="/admin/{{userid}}/redirect-image" method="post">
          <input name="folder_path" value="{{folder_path}}" type="hidden">
          <input name="folder_name" value="{{folder_name}}" type="hidden">
          <button id="ok_button" type="submit">Назад</button>
        </form>
         <form id="redirect-editor_form" action="/admin/{{userid}}/redirect-editor" method="post">
          <input name="folder_path" value="{{folder_path}}" type="hidden">
          <input name="folder_name" value="{{folder_name}}" type="hidden">
          <button id="ok_button" type="submit">Пропустити/ Продовжити</button>
        </form>
    </div>
</body>
</html>