  </head>
  <body>
    <header class="header">
      <h1>Зображення для Категорій Новин</h1>
      <a id="exit" href="/admin/{{user}}/exit"><i class="fas fa-power-off"></i> ВИХІД</a>
    </header> 
    {{> sidebar id=user}}
    <div class="table_container">
      <div class="control-panel small">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <form action="/admin/{{user}}/news/category/1">
            <button class="button accent-btn" >Перейти до  Категорій</button>
          </form>
            <form action="/admin/{{user}}/news/1">
            <button class="button accent-btn" >Перейти до  Новин</button>
          </form>
          {{!-- <li class="nav-item" role="presentation">
