          </li> --}}
        </ul>
      </div>
      <div class="content-area">
        <div class="tab-content" id="commandTabContent">
          <div class="tab-pane fade show active" id="bg" role="tabpanel" aria-labelledby="bg-tab">
            <div class="panel-flex">
              <form id="send-photo_form" class="file-form send-bg_form">
                <p>Завантажити  Зображення</p>
                <input type="file" id="photo-input" name="category_imgs" accept="image/*" multiple style="display: none;">
                <button id="view-photo-btn" class="button secondary-btn">Огляд...</button>
                <button type="submit" id="send-photo-submit" class="button accent-btn" disabled>Зберегти</button>
              </form>
              <form action="/admin/{{user}}/news/category/photo-editor" method="GET">
                <button class="button delete-btn">Оновити таблицю </button>
              </form>
            </div>
            <table class="table-fill">
              <thead>
                <tr>
                  <th>Зображення</th>
                  <th>Дії</th>
                </tr>
              </thead>
              <tbody class="table-hover" id="container-bg">
                {{#each photos}}
                  <tr>
                    <td class="text-left"><img src="data:image/jpeg;base64,{{base64}}" height="90px"></td>
                    <td class="left-text">
                      <form data-group="delete-bg-img" method="POST" action="/admin/{{../user}}/news/category/photo-remove/{{./_id}}">
                        <button  class="button delete-btn">Видалити</button>
                      </form>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{!-- <div class="tab-pane fade" id="sign" role="tabpanel" aria-labelledby="sign-tab">
