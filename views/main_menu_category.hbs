  <head>
    <title>Категорії</title>
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/resets.css">
    <link rel="stylesheet" href="/css/main_styles.css">
  </head>
  <body>
    <header class="header">
      {{#ifCond contentType '===' 'news'}}
        <h1>Категорії Новин</h1>
      {{/ifCond}}
      {{#ifCond contentType '===' 'pages'}}
        <h1>Категорії Сторінок</h1>
      {{/ifCond}}
      <a id="exit" href="/admin/{{user}}/exit"><i class="fas fa-power-off"></i> ВИХІД</a>
    </header> 
    {{> sidebar id=user}}
    <div class="table_container">
      <div class="control-panel small">
        <a href="/admin/{{user}}/{{contentType}}/1" class="button primary-btn">Назад</button>
        <a href="/admin/{{user}}/{{contentType}}/category/add" class="button accent-btn">Додати</a>
      </div>
      <div class="content-area">
        <table class="table-fill">
          <thead>
            <tr>
              <th>Емблема</th>
              <th>Назва Українською</th>
              <th>Назва Англійською</th>
              <th>Дії</th>
            </tr>
          </thead>
          <tbody class="table-hover">
            {{#each categories}}
              <tr>
                <td class="text-center">
                  {{#ifCond img '!==' ''}}
                    <img src="{{img}}" alt="{{title_ua}}">
                    {{else}}
                    <span>Відсутнє</span>
                  {{/ifCond}}
                </td>
                <td class="text-center">{{title_ua}}</td>
                <td class="text-center">{{title_en}}</td>
                <td class="text-center">
                  <a href="/admin/{{../user}}/{{contentType}}/category/edit/{{_id}}" class="button primary-btn">
                    Редагувати
                  </a>
                  <form method="POST" action="/admin/{{../user}}/{{contentType}}/category/delete/{{_id}}">
                    <button type="submit" class="button delete-btn">Видалити</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </body>
