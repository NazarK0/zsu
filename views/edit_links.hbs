<div class="container">
    <form method="POST" action="/admin/{{userid}}/links/{{action_type}}">
        <div class="row">
            <div class="col-25">
                <label for="login"><B>Назва</B></label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="title" placeholder="Назва" value="{{title}}" required>
            </div>
        </div>
        <div style="margin-top: 10px;">
            <label><B>Тип</B></label>
            {{#LinkCategoriesList categoriesList}}
            {{/LinkCategoriesList}}
        </div>
        <div class="row">
            <div class="col-25">
                <label for="link"><B>Посилання</B></label>
            </div>
            <div class="col-75">
                <input id="link" name="link" type="text" value="{{link}}" placeholder="Посилання" required>
            </div>
        </div>
        <button id="save">Зберегти</button>
    </form>
    <form method="POST" action="/admin/{{userid}}/links/delete/{{linkid}}">
        <button id="delete" style="visibility:{{parameter}}" type="submit">Видалити</button>
    </form>
</div>
