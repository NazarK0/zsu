<head>
  <title>Редагувати посилання</title>
  <link rel="stylesheet" href="/css/input_form.css" type="text/css">
  <link rel="stylesheet" href="/css/checkbox_style.css" type="text/css">
  <link rel="stylesheet" href="/css/menu.css" type="text/css">
  <link rel="stylesheet" href="/css/resets.css" type="text/css">
  <link rel="stylesheet" href="/css/edit_links.css" type="text/css">
  <script src="/js/links-img-fetch.js" defer></script>
</head>
<body style = "background-color: #2f2f2f;">
  {{> menu id=userid}}
  <div class="container">
    <h3 class="title">Посилання "{{title_ua}}"</h3>
    <form method="POST" action="/admin/{{userid}}/links/{{action_type}}">
      <div>
        <label for="title_ua" class="stretch">Назва Українською</label>
        <input type="text" id="title_ua" class="stretch" name="title_ua" placeholder="Назва Українською" value="{{title_ua}}" required>
      </div>
      <div>
        <label for="title_en" class="stretch">Назва Англійською</label>
        <input type="text" id="title_en" class="stretch" name="title_en" placeholder="Назва Англійською" value="{{title_en}}" required>
      </div>
      <div>
        <label for="link-description" class="stretch">Короткий опис</label>
        <textarea id="link-description" name="description" placeholder="Короткий опис">{{description}}</textarea>
      </div>
      <div>
          <label>Тип</label>
          {{#LinkCategoriesList categoriesList}}
          {{/LinkCategoriesList}}
      </div>
      <div>
        <label for="link">Посилання</label>
        <input id="link" class="stretch" name="link" type="text" value="{{link}}" placeholder="https://example.com" required>
      </div>
      <div>
        <label for="link-img">Зображення</label>
        <input type="file" id="link-img-input" accept="image/*" name="link_img" class="block" style="display: none;">
        <div>
          <button type="button" id="send-link-img-btn" class="button secondary-btn">Огляд...</button>
          <button type="button" id="send-link-img-submit" class="button accent-btn" data-link-id="{{linkid}}" disabled>Закріпити</button>
          <input type="hidden" id="link-id" name="link_id" value="{{linkid}}" />
        </div>
        <div class="flex" id="current-link-img" style="display: none;">
          <img id="link-image" src="{{imgSrc}}" alt="{{title_ua}}" width="300px" height="200px">
          <button type="button" id="delete-link-img" class="button delete-btn" data-link-id="{{linkid}}">Видалити</a>
        </div>
      </div>
      <hr>
      <button class="button secondary-btn">Зберегти</button>
    </form>
    <form method="GET" action="/admin/{{userid}}/links/1" class="inline">
      <button class="button primary-btn" style="visibility:{{parameter}}">Назад</button>
    </form>
    <form method="POST" action="/admin/{{userid}}/links/delete/{{linkid}}" class="inline">
      <button type="submit" class="button delete-btn" style="visibility:{{parameter}}" type="submit">Видалити</button>
    </form>
  </div>
</body>
