<head>
    <script src="/js/generate_pass.js" defer></script>
    <link rel="stylesheet" href="/css/input_form.css">
    <link rel="stylesheet" href="/css/checkbox_style.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/menu.css">
</head>
<body style = "background-color: #2f2f2f">
{{> menu id=userid}}
<div class="container">
  <form method="POST" action="/admin/{{userid}}/user/edit/{{edited_userid}}/password">
   <div class="row">
      <div class="col-45">
        <label for="old_password"><B>Пароль</B></label>
      </div>
      <div class="col-45">
        <input type="password" id="old_password" class="stretch" name="old_password" placeholder="Поточний пароль" value="{{old_password}}">
      </div>
    </div>
    <div class="row">
      <div class="col-45">
        <label for="new_password1"><B>Новий пароль</B></label>
      </div>
      <div class="col-45">
        <input type="password" id="password" class="stretch" name="new_password1" placeholder="Новий пароль">
         <a class="button secondary-btn" id="view-pass" style="display: none;"> Показати Пароль </a>
         <a class="button secondary-btn" id="generator-pass" style="display: block;"> Згенерувати Пароль </a>   
      </div>
    </div>
     <div class="row">
      <div class="col-45">
        <label for="new_password2"><B>Новий пароль ще раз</B></label>
      </div>
      <div class="col-55">
        <input type="password" id="new_password2" class="stretch" name="new_password2" placeholder="Ще раз">
      </div>
    </div>
    <button type="submit" class="button primary-btn">Зберегти</button>
  </form>
</div>
</body>
</html>
