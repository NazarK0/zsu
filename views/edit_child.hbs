<head>
    <link rel="stylesheet" href="/css/input_form.css">
    <link rel="stylesheet" href="/css/checkbox_style.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/resets.css">
    <link rel="stylesheet" href="/css/edit_styles.css">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="/js/filterContentList.js" defer></script>
</head>
<body style = "background-color: #2f2f2f">
  {{> menu id=userid}}
  <div class="container">
    <h3 class="title">Пункт меню "{{title}}"</h3>
    <form method="POST" action="/admin/{{userid}}/all/submenu/{{submenu_id}}/child/{{action_type}}">
      <div class="row">
        <div class="col-25">
          <label for="login"><B>Назва</B></label>
        </div>
        <div class="col-75">
          <input type="text" class="stretch" name="title" placeholder="Назва" value="{{title}}" required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="dropdown"><B>Мова</B></label>
        </div>
        <div class="col-75">
          <select id="dropdown" name="lang" class="stretch">
            <option value="ua">Українська</option>
            <option value="en">English</option>
          </select>
        </div>
      </div>
      <div>
        {{#ifCond currentContent '!==' ""}}
          <p class="label">Поточний контент</p>
          <label><b>"{{currentContent}}"</b></label>
        {{/ifCond}}
      </div>
      <div class="row">
        <div class="col-75" style="text-align: center;">
            <h4>Доступні сторінки для контенту</h4>
            {{#ContentList content_page_list}}
            {{/ContentList}}
        </div>
      </div>
      <div class="row">
        <div class="col-75" style="text-align: center;">
          <h4>Доступні Посилання для переходу на інші ресурси</h4>
          {{#LinkList link_list}}
          {{/LinkList}}
        </div>
      </div>
      <button class="button secondary-btn">Зберегти</button>
    </form>
    <form method="GET" action="/admin/{{userid}}/all/submenu/{{submenu_id}}/child" class="inline">
      <button class="button secondary-btn inline" style="visibility:{{parameter}}">Відмінити</button>
    </form>
    <form method="POST" action="/admin/{{userid}}/all/submenu/{{submenu_id}}/child/remove/{{id}}" class="inline">
      <button class="button delete-btn" style="visibility:{{parameter}}">Видалити</button>
    </form>
  </div>    
</body>
</html>
