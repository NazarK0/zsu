<head>
    <link rel="stylesheet" href="/css/input_form.css">
    <link rel="stylesheet" href="/css/checkbox_style.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/resets.css">
    <link rel="stylesheet" href="/css/edit_styles.css">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
<body style="background-color: #2f2f2f">
  {{> menu id=user}}
  <div class="container">
    <h3 class="title">Пункт меню "{{title}}"</h3>
    <form method="POST" action="/admin/{{user}}/mainmenu/{{action_type}}">
      <div class="row">
        <div class="col-25">
          <label for="login"><B>Назва</B></label>
        </div>
        <div class="col-75">
          <input type="text" class="stretch" name="title" placeholder="Назва" value="{{title}}" required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="dropdown"><B>Мова</B></label>
        </div>
        <div class="col-75">
          <select id="dropdown" name="lang" class="stretch">
            <option value="ua">Українська</option>
            <option value="en">English</option>
          </select>
        </div>
      </div>
      <button class="button secondary-btn">Зберегти</button>
    </form>
    <form method="POST" action="/admin/{{user}}/mainmenu/back/{{type}}" class="inline">
      <button class="button secondary-btn">Відмінити</button>
    </form>
    <form method="POST" action="/admin/{{user}}/mainmenu/delete/{{id}}" class="inline">
      <button class="button delete-btn" type="submit">Видалити</button>
    </form>
  </div>
</body>
</html>
