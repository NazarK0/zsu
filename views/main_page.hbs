<head>
  <title>Перевірені сторінки</title>
  <link rel="stylesheet" href="/css/table.css">
  <link rel="stylesheet" href="/css/input_form.css">
  <link rel="stylesheet" href="/css/main_styles.css">
  <script src="/js/pages-filter.js" defer></script>
</head>
<body>
  <header class="header">
    <h1>Перевірені сторінки</h1>
    <a id="exit" href="/admin/{{user}}/exit"><i class="fas fa-power-off"></i> ВИХІД</a>
  </header>
  {{> sidebar id=user}}
  <div class="table_container cp-big">
    <div class="control-panel">
      <div id="filter-form" class="filter-form">
        <select name="filter-main" id="filter-main" class="filter-main">
          <option id="all">Усі сторінки </option>
          <option>Усі сторінки Головного Меню</option>
          {{#each menu_names}}
          <option>{{title}}</option>
          {{/each}}
        </select>
        <select name="language" id="filter-language">
          <option id="all">Усі Мови</option>
          <option>ua</option>
          <option>en</option>
        </select>
        <input type="search" placeholder="Назва Сторінки" id="filter-title">
      </div>
      <div class="control-buttons">
        <a href="/admin/{{user}}/pages/add" class="button accent-btn">Створити</a>
        <a href="/admin/{{user}}/pages/cancel-publish/1" class="button secondary-btn published">Не перевірені</a>
        <a href="/admin/{{user}}/pages/category/1"class="button secondary-btn">Категорії</a>
        <button id="filter-active" class="button primary-btn filter-btn">Фільтрувати</button>
        <button id="disabled-filter" class="button primary-btn filter-btn">Скинути фільтр</button>
      </div>
    </div>
    <div class="content-area">
      <table class="table-fill" id="table">
        <thead>
          <tr>
            <th class="text-center">Назва</th>
            <th class="text-center page-check">Головне Меню</th>
            <th class="text-center">Актуальне</th>
            <th class="text-center ategory-check">Категорія</th>
            <th class="text-center lang">Мова</th>
            <th class="text-center">Кількість переглядів</th>
            <th class="text-center">Дії</th>
          </tr>
        </thead>
        <tbody class="table-hover">
          {{#each contentPages}}
            <tr>
              <td class="text-left" id="page-title">{{title}}</td>
              <td class="text-center" id="page-dependense-main">{{mainMenuItemTitle}}</td>
              <td class="text-center">{{actualContentTitle}}</td>
              <td class="text-center">{{categoryTitle}}</td>
              <td class="text-center" id="page-language">{{language}}</td>
              <td class="text-center">{{views}}</td>
              <td class="text-center">
                <form method="GET" action="/admin/{{../user}}/pages/edit/{{_id}}">
                  <button class="button secondary-btn">Редагувати</button>
                </form>
                <form method="POST" action="/admin/{{../user}}/pages/cancel-publish/{{_id}}">
                  <button class="button secondary-btn">Подати на перевірку</button>
                </form>
                  <form method="POST" action="/admin/{{../user}}/pages/delete/{{_id}} ">
                  <button class="button delete-btn">Видалити</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</body>